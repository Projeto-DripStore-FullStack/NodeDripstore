datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Produtos {
  id         Int       @id @default(autoincrement())
  subtitle   String
  title      String
  subtitle2  String
  price      String
  promotion  Decimal
  base_url   String
  cor        String   // Cor do produto
  tamanho    Tamanho     // Tamanho do produto (PP, P, M, G, GG)
  genero     Genero   // Gênero do produto (Masculino, Feminino, Unissex)
  marca      String   // Marca do produto
  categoria  Categorias
  categorias Categoria[] @relation("ProdutoCategoria")
  estoque    Estoque[]  @relation("ProdutoEstoque")
}

model Usuarios {
  id          Int      @id @default(autoincrement())
  nome        String
  cpf         String
  telefone    String
  email       String   @unique
  password    String
  endereco    String   // Campo para o endereço do usuário
  bairro      String   // Campo para o bairro
  cidade      String   // Campo para a cidade
  complemento String?  // Campo opcional para o complemento
  cep         String   // Campo para o CEP
  pedidos     Pedidos[]
}

model Estoque {
  id         Int      @id @default(autoincrement())
  nome       String
  quantidade Int
  produto_id Int
  produto    Produtos @relation(fields: [produto_id], references: [id], name: "ProdutoEstoque") // Nomeando a relação
}

model Pedidos {
  id             Int       @id @default(autoincrement())
  vendedor       String
  cliente        String
  formapagamento String
  valorpedido    Decimal
  deleted        Boolean
  usuario_id     Int
  usuario        Usuarios @relation(fields: [usuario_id], references: [id])
}

model Categoria {
  id       Int       @id @default(autoincrement())
  nome     String
  produtos Produtos[] @relation("ProdutoCategoria")
}

enum Tamanho {
  PP
  P
  M
  G
  GG
}

enum Genero {
Masculino
Feminino
Unissex
}

enum Categorias {
Esporte
Utilitario
Corrida
Casual
}