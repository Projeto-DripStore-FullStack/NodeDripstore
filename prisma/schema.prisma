datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuarios {
  id          Int        @id @default(autoincrement())
  nome        String
  cpf         String     @unique
  telefone    String
  email       String     @unique
  password    String
  endereco    String
  bairro      String
  cidade      String
  complemento String?
  cep         String
  pedidos     Pedidos[]
}

model CategoriaPecas {
  id       Int        @id @default(autoincrement())
  tipo     String     @unique
  produtos Produtos[]
}

model CategoriasFuncaoPeca {
  id       Int        @id @default(autoincrement())
  funcao   String     @unique
  produtos Produtos[]
}

model Estoque {
  id         Int        @id @default(autoincrement())
  nome       String
  quantidade Int
  produto    Produtos   @relation(fields: [produto_id], references: [id], name: "ProdutoEstoque")
  produto_id Int
}

model Produtos {
  id                    Int                    @id @default(autoincrement())
  subtitle              String
  title                 String
  subtitle2             String
  price                 String
  promotion             Decimal?
  base_url              String
  cor                   String
  tamanho               Tamanho?
  genero                Genero
  marca                 String
  categoriaPeca         CategoriaPecas         @relation(fields: [categoriaPeca_id], references: [id])
  categoriaPeca_id      Int
  categoriaFuncaoPeca   CategoriasFuncaoPeca   @relation(fields: [categoriaFuncaoPeca_id], references: [id])
  categoriaFuncaoPeca_id Int
  estoque               Estoque[]              @relation("ProdutoEstoque")
  pedidosProdutos       PedidosProdutos[]      // Relação com PedidosProdutos
}

model Pedidos {
  id            Int      @id @default(autoincrement())
  numeroPedido  String   @unique
  formapagamento String
  valorpedido   Float
  status        StatusPedido @default(Encaminhado)
  usuario_id   Int       // Alterado de usuarioId para usuarios_id
  usuario       Usuarios @relation(fields: [usuario_id], references: [id])  // Alterado aqui também
  produtos      PedidosProdutos[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


model PedidosProdutos {
  id          Int      @id @default(autoincrement())
  pedido_id   Int
  produto_id  Int
  quantidade  Int
  pedido      Pedidos   @relation(fields: [pedido_id], references: [id])
  produto     Produtos  @relation(fields: [produto_id], references: [id])
}

enum Tamanho {
  PP
  P
  M
  G
  GG
}

enum Genero {
  Masculino
  Feminino
  Unissex
}

enum StatusPedido {
  Cancelado
  Finalizado
  Encaminhado
}
